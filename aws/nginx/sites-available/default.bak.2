server {
	listen 80 default_server;
	listen [::]:80 default_server;

	root /var/www/html;

	index index.html index.htm index.nginx-debian.html;

	server_name _;

	location / {
		try_files $uri $uri/ =404;
	}
}

server {
	root /var/www/html;

	index index.html index.htm index.nginx-debian.html;
    	server_name animapu.site www.animapu.site; # managed by Certbot


	location / {
		try_files $uri $uri/ =404;
	}

    	listen [::]:443 ssl ipv6only=on; # managed by Certbot
    	listen 443 ssl; # managed by Certbot
    	ssl_certificate /etc/letsencrypt/live/animapu.site/fullchain.pem; # managed by Certbot
    	ssl_certificate_key /etc/letsencrypt/live/animapu.site/privkey.pem; # managed by Certbot
    	include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    	ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
    	if ($host = www.animapu.site) {
        	return 301 https://$host$request_uri;
    	} # managed by Certbot


    	if ($host = animapu.site) {
        	return 301 https://$host$request_uri;
    	} # managed by Certbot


	listen 80 ;
	listen [::]:80 ;
    	server_name animapu.site www.animapu.site;
    	return 404; # managed by Certbot
}

